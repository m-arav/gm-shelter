<div id="floating-panel">

<div class="btn-group">
    <button id="options" class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Filters</button>
    <div class="dropdown-menu">
        <a class="dropdown-item" onclick="clearMarkers();">Hide Markers</a>
        <a class="dropdown-item" onclick="showMarkers();">Show All Markers</a>
        <a class="dropdown-item" onclick="showLocations('relief_material_collection');">All Centers</a>
        <a class="dropdown-item" onclick="showLocations('shelter');">All Shelters</a>
        <a class="dropdown-item" onclick="showNearestLocations('relief_material_collection');">Centers Near Me</a>
        <a class="dropdown-item" onclick="showNearestLocations('shelter');">Shelters Near Me</a>
    </div>
</div>
</div>

<div id="map"></div>
<script async defer
	src="https://maps.googleapis.com/maps/api/js?key=<%=ENV['MAPS_API_KEY'] %>&callback=initMap">
</script>
<script>
  $(document).ready(function(){
     $(".dropdown-menu a").click(function(){
       $("#options").text($(this).text());
     });
  });
</script>
